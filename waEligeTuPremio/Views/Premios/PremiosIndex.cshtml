<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalTitulo"></h4>
            </div>
            <div class="modal-body">
                <span id="mensaje"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                @*<button type="button" class="btn btn-primary" id="btnEliminar" data-eliminar="">Eliminar</button>*@
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    var file
    var name

    $(document).ready(function () {


        $('input[type="file"]').change(function (e) {

            name = e.target.name;
           
            if (name != 'excel') {

                file = e.target.files[0];

                var fileData = new FormData();
                fileData.append(file.name, file);

                var intCodigo = e.target.name;

                fileData.append('intCodigo', intCodigo);
                $.ajax({
                    url: '../Premios/UploadImg',
                    type: "POST",
                    contentType: false, // Not to set any content header
                    processData: false, // Not to process data
                    data: fileData,
                    success: function (result) {

                        if (result == "Status de Importacion: Se subio correctamente la imagen.")
                            window.location.href = '../Premios/PremiosIndex';
                        else {
                            $("#myModal").modal();
                            $("#myModalTitulo").text('Mensaje');
                            $("#mensaje").text(result);
                        }

                    },
                    error: function (err) {
                        $("#myModal").modal();
                        $("#myModalTitulo").text('Mensaje');
                        $("#mensaje").text(err.statusText);

                    }
                });

            }

        });

    });


    $(function () {
        $("#btnImportar").click(function () {
            var fileUpload = $("#FileUpload1").get(0);
            var files = fileUpload.files;

            var fileData = new FormData();
            for (var i = 0; i < files.length; i++) {
                fileData.append(files[i].name, files[i]);
            }
            fileData.append('username', 'Manas');

            $.ajax({
                url: '../Premios/UploadFiles',
                type: "POST",
                contentType: false, // Not to set any content header
                processData: false, // Not to process data
                data: fileData,
                success: function (result) {

                    $("#myModal").modal();
                    $("#myModalTitulo").text('Mensaje');
                    $("#mensaje").text(result);
                },
                error: function (err) {
                    $("#myModal").modal();
                    $("#myModalTitulo").text('Mensaje');
                    $("#mensaje").text(err.statusText);

                }
            });
        });

        $("#btnAlta").click(function () {
            $.ajax({
                url: '../Premios/AgregarPremios',
                type: "POST",
                contentType: false, // Not to set any content header
                processData: false, // Not to process data
                //data: fileData,
                success: function (result) {

                    if (result == "Se actualizó los datos de Premios correctamente.")
                        window.location.href = '../Premios/PremiosIndex';
                    else {
                        $("#myModal").modal();
                        $("#myModalTitulo").text('Mensaje');
                        $("#mensaje").text(result);
                    }
                },
                error: function (err) {
                    $("#myModal").modal();
                    $("#myModalTitulo").text('Mensaje');
                    $("#mensaje").text(err.statusText);
                    //alert(err.statusText);
                }
            });
        });

        $("#btnEliminar").click(function () {
            $.ajax({
                url: '../Premios/EliminarPlan',
                type: "POST",
                contentType: false, // Not to set any content header
                processData: false, // Not to process data
                //data: fileData,
                success: function (result) {

                    if (result == "Se eliminó correctamente el Plan de Ganamas.")
                        window.location.href = '../Premios/PremiosIndex';
                    else {
                        $("#myModal").modal();
                        $("#myModalTitulo").text('Mensaje');
                        $("#mensaje").text(result);
                    }
                },
                error: function (err) {
                    $("#myModal").modal();
                    $("#myModalTitulo").text('Mensaje');
                    $("#mensaje").text(err.statusText);
                    //alert(err.statusText);
                }
            });
        });


    });

</script>

