            <div class="col-md-6">

                <div class="panel panel-default">
                    <div class="panel-heading text-center">Archivo de Premios</div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12">
                                <p>Seleccione el archivo Excel con la lista de Premios.</p>
                            </div>
                        </div>

                        @using (Html.BeginForm("DownloadFile", "Premios", FormMethod.Post))
                        {
                            <div class="row">
                                <div class="col-md-7"></div>
                                <div class="col-md-2">
                                    <button class="btn btn-default" style="vertical-align:middle" value="Descargar" name="Command">
