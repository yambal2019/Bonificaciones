                                                _@Html.DisplayFor(modelItem => modelItem.FirstOrDefault().smintAnioIniPedido)
                                                a C @Html.DisplayFor(modelItem => modelItem.FirstOrDefault().smintCampFinPedido)
                                                _@Html.DisplayFor(modelItem => modelItem.FirstOrDefault().smintAnioFinPedido)
