                            <b style="color:#ff7810">Stock</b><br />
                            <b>@Html.DisplayFor(modelItem => item.smintStock) Pzs</b>
                        </div>
             
                        <div class="col-md-1"><br />@Html.DisplayFor(modelItem => item.bitActivo)</div>
                        <div class="col-md-1 btn btn-default btn-file">
                          
                            Imagen<input type="file" id="fuImagen" name=@item.intCodigo accept=".jpg">
                          
                        </div>
                      
                        <div class="col-md-1 btn btn-default">
                        
                            @Html.ActionLink("Editar", "EditImg", new { id = item.intCodigoSAP }, new { data_modal = "", style = "color:white" })
                        </div>
