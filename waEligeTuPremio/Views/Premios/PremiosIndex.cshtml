                                                _@Html.DisplayFor(modelItem => modelItem.FirstOrDefault().smintAnioIniPremio)
                                                a C @Html.DisplayFor(modelItem => modelItem.FirstOrDefault().smintCampFinPremio)
                                                _@Html.DisplayFor(modelItem => modelItem.FirstOrDefault().smintAnioFinPremio)
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <b>Inicio y Fin de Campaña Recupero</b><br />
                                            <div class="col-md-10">
