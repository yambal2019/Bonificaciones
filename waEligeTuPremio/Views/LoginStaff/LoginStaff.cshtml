@model waEligeTuPremio.Models.csLogin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,Chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>

    <style>
        .form {
            position: relative;
            z-index: 1;
            background: #FFFFFF;
            max-width: 350px;
            margin: 0 auto 100px;
            padding: 20px;
            border-top-left-radius: 3px;
            border-top-right-radius: 3px;
            border-bottom-left-radius: 3px;
            border-bottom-right-radius: 3px;
            text-align: center;
        }

        body {
            background-color: #ff7810;
            font-family: "Roboto", sans-serif;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        .container1 {
            position: relative;
            z-index: 1;
            max-width: 300px;
            margin: 0 auto;
        }

        .btn-default {
            color: white;
            background-color: #ff7810;
            border-color: #ff7810;
        }
    </style>

</head>
<body>

    <div class="navbar navbar-default ">
        <div class="container" style="background-color: white;">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href='@Url.Action("Index", "Login")'><img src="~/images/logo.png" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <div style="padding-top: 15px;padding-bottom: 15px;background-color:white;color:white;">.</div>
                    </li>
                   
                    
                </ul>
            </div>

        </div>
    </div>

    <div class="form">
        <div class="info">
            <h1 style="color:#ff7810;">Elige tu Bonificación</h1>
        </div>
        @using (Html.BeginForm("LoginStaff", "LoginStaff", FormMethod.Post))
        {
            <div class="container1">
                <img src="~/images/staff-Yanbal.png" style="height:150px;width:100px" />
                <br />
                <br />
                <div style="text-align:left;">@Html.ValidationSummary(true, "", new { @class = "text-danger" })</div>
                @Html.AntiForgeryToken()
                <h5 style="text-align:left; color:#ff7810;"> <b>Código</b></h5>
                @Html.TextBoxFor(u => u.Usuario, new { @class = "form-control input-sm myTextBox", id = "txtUsr", autofocus = "autofocus" })
                <div style="text-align:left;">@Html.ValidationMessageFor(u => u.Usuario, "", new { @class = "text-danger" })</div>
                <h5 style="text-align:left; color:#ff7810;"><b>Contraseña</b></h5>
                @Html.PasswordFor(u => u.Contrasena, new { @class = "form-control input-sm myTextBox", id = "txtPassword" })
                <div style="text-align:left;">@Html.ValidationMessageFor(u => u.Contrasena, "", new { @class = "text-danger" })</div>
                <br />
                <br />
                <input type="submit" value="Iniciar Sesión" class="btn btn-default btn-block">
            </div>
        }

    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>

