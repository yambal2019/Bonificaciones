@model waEligeTuPremio.Models.TBPremioModel

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/Content/Premio.css" rel="stylesheet" />

<style>


    .btn-file input[type=file] {
        position: absolute;
        top: 0;
        right: 0;
        min-width: 100%;
        min-height: 100%;
        font-size: 100px;
        text-align: right;
        filter: alpha(opacity=0);
        opacity: 0;
        outline: none;
        cursor: inherit;
        display: block;
    }

    .inicio {
        display: inline-block;
        width: 100%;
        padding: 0px 0 0 15px;
        color: rgba(118, 118, 118, 1.0);
        background-color: #f1f2f7;
    }

    .box {
        background-color: #ffffff;
        margin: 15px 0;
    }

    .panel_header {
        width: 100%;
        display: inline-block;
        background-color: #f5f5f5;
        border: 1px solid #e8e8e8;
        border-bottom: 2px solid rgba(31, 181, 172, 1.0);
        vertical-align: top;
        position: relative;
    }

    .title {
        margin-top: 10px;
        font-family: 'Oswald', Arial, Helvetica, sans-serif;
        font-size: 19px;
        padding-left: 15px;
        line-height: 30px;
        color: #676767;
        font-weight: 300;
        text-transform: uppercase;
        display: inline-block;
        float: left !important;
    }

    .content-body {
        padding: 30px;
        background-color: #ffffff;
        border: 1px solid #e8e8e8;
        border-top: 0px;
        -webkit-transition: 800ms;
        -moz-transition: 800ms;
        -o-transition: 800ms;
        transition: 800ms;
    }

    .form-group {
        margin-bottom: 10px;
    }

    .form-label {
        font-weight: 400;
        color: #555555;
    }
    /*FIN*/

</style>




<div class="inicio">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="page-title">

            <div class="pull-left">
                <h1 class="title">Formulario de Premio</h1>
            </div>
        </div>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <section class="box ">
            <header class="panel_header">
                <h2 class="title pull-left">Campaña</h2>
                <div class="actions panel_actions pull-right">
                    <i class="box_toggle fa fa-chevron-down"></i>
                    <i class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></i>
                    <i class="box_close fa fa-times"></i>
                </div>
            </header>
            <div class="content-body">


                <form method="get" action="@Url.Action("Busqueda")" data-otf-ajax="true" data-otf-target="#ListPremio">

                    <div class="row">
                        <div class="col-md-4 col-sm-4 col-xs-12">

                            <div class="form-group has-help">
                                <label class="form-label" for="field-13">Año</label>
                                @Html.DropDownListFor(m => m.AniosId, Model.ListaAnios, "- Seleccione un Año -", new { @class = "form-control" })
                                <br>
                            </div>

                        </div>
                        <div class="col-md-4 col-sm-4 col-xs-12">

                            <div class="form-group has-help">
                                <label class="form-label" for="field-13">Campaña</label>
                                @Html.DropDownListFor(m => m.SelectedCampañaId, Model.ListaCampaña, new { @class = "form-control" })
                                @*<select class="form-control" id="SelectedCampañaId"></select>*@
                                <br>
                            </div>


                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-sm-4 col-xs-12">


                            <div class="form-group">
                                @*<button type="button" id="enviar" class="btn btn-success submit">Buscar Premio</button>*@
                                <button type="submit" id="enviar" class="btn btn-success submit">Buscar Premio</button>
                            </div>
                        </div>

                    </div>
                </form>



            </div>
        </section>
    </div>

    @Html.Partial("_DetallePremio", Model)

    <!-- modal -->
    <div class="modal fade" id="myModal">
        <div class="modal-dialog modal-lg" style=" width: 900px !important;">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4 class="modal-title" id="myModalTitulo"></h4>
                </div>
                <div id='myModalContent'></div>
            </div>
        </div>
    </div>


    <script type="text/javascript">


    $(document).ready(function () {

        $("#AniosId").change(function () {
            console.log("cambio");
            console.log($("#AniosId").val());

            $("#SelectedCampa_aId").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetCampaña")',
                dataType: 'json',
                data: { AniosId: $("#AniosId").val() },
                success: function (states) {
                    $.each(states, function (i, state) {
                        $("#SelectedCampa_aId").append('<option value="' + state.Value + '">' +
                             state.Text + '</option>');

                    });
                },
                error: function (ex) {
                    alert('Failed to retrieve country states.' + ex);
                }
            });

        })

          
    });

    </script>
</div>

